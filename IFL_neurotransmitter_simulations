ftype='n' # feedback type: n-negative, p-positive, u-unregulated
f=10
pr=0.5 #
M=100

n=M # occupied states
r=0 #  repair states

k=10 # 10 # feedback strength constant # -------------- KEEP CONSTANT
kn=50
kp=12
k1=10
k1n=15
k1p=15 # 10  # negative feedback strength, (-) speed of k-> 0, (+) speed of kb->k
kr=10 # 10,  repair rate, 15 for good plot, rate of nr->nu
kb=7 #1 base rate

gammaz=100
gammazn=21
gammazp=100 # neurotransmitter decay rate
cz=100 # number of neurotransmitters per vesicle
z=0 # neurotransmitters

delta_t = 0.01
tmax = 1 # <-------------- TMAX, set to 200 for the FF calculation

ratio = 0.2
q=[]
ntimes=20
for i in range(ntimes):
    print(i, ntimes)
    R0s = simulate_kr_inf(f, pr, M, n, r, z, k, k1, kb, kr, gammaz, cz, 'u', 200, delta_t)
    Rns = simulate_kr_inf(f, pr, M, n, r, z, kn, k1n, kb, kr, gammazn, cz, 'n', 200, delta_t)
    Rps = simulate_kr_inf(f, pr, M, n, r, z, kp, k1p, kb, kr, gammazp, cz, 'p', 200, delta_t)
    z0FF=get_FF(R0s[1][int(ratio*len(R0s[3])):]) # 1 n, 3 z
    znFF=get_FF(Rns[1][int(ratio*len(Rns[3])):]) # 1 n, 3 z
    zpFF=get_FF(Rps[1][int(ratio*len(Rps[3])):]) # 1 n, 3 z
    q.append([z0FF, znFF, zpFF])
    print(np.mean(q, 0))

q=np.array(q)
ffs = np.mean(q, 0)

zmeaneq=f*cz*pr*k*M/(gammaz*(f*pr+k))

